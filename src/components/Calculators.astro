---
import CalculatorItem from "../components/CalculatorItem.astro";

const CALCULATORS = [
  {
    title: "Crecimiento de Ahorro",
    img: "./images/savings.svg",
    link: "./calculators/savings",
  },
  {
    title: "GMF - $4 X $1000",
    img: "./images/gmf.svg",
    link: "./calculators/gmf",
  },
  {
    title: "Presupuesto Personal",
    img: "./images/budget.svg",
    link: "./calculators/budget",
  },
  {
    title: "Retorno de Inversión",
    img: "./images/investment-return.svg",
    link: "./calculators/investment-return",
  },
  {
    title: "Tarjeta de Crédito",
    img: "./images/credit-card.svg",
    link: "./calculators/credit-card",
  },
];
---

<section class="w-full p-4 py-10 lg:w-[960px]">
  <slot />
  <div class="grid grid-cols-2 gap-3 pt-10 md:grid-cols-3 lg:grid-cols-5">
    {CALCULATORS.map((calculator) => <CalculatorItem {...calculator} />)}
  </div>
</section>
